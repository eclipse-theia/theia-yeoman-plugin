{
  "name": "@theia/yeoman-plugin",
  "publisher": "theia",
  "license": "EPL-2.0",
  "keywords": [
    "theia-plugin"
  ],
  "version": "0.0.1",
  "files": [
    "src"
  ],
  "activationEvents": [
    "*"
  ],
  "devDependencies": {
    "@theia/plugin": "0.3.15",
    "@theia/plugin-packager": "latest",
    "rimraf": "2.6.2",
    "tslint": "5.10.0",
    "typescript": "2.9.2",
    "typescript-formatter": "7.2.2"
  },
  "scripts": {
    "prepare": "yarn run clean && yarn run build",
    "clean": "rimraf lib",
    "format-code": "tsfmt -r",
    "build": "yarn run format-code && yarn run compile && yarn run tslint-fix && theia:plugin pack",
    "compile": "tsc",
    "watch": "tsc -watch",
    "tslint-fix": "tslint --fix --project .",
    "tslint": "tslint --fix --project ."
  },
  "engines": {
    "theiaPlugin": "latest"
  },
  "theiaPlugin": {
    "backend": "lib/theia-yeoman-plugin-backend-plugin.js"
  },
  "dependencies": {
    "yeoman-environment": "2.3.0"
  }
}
